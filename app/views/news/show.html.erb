<%= render "common/news_bread_crumb" %>
<div class="product_show_header_container">
  <%= render "common/services_header" %>
  <div id="product_relative">
    <%= link_to_previous_news @previous %>
    <%= link_to_next_news @next %>
  </div>
</div>
<div class="clearfix">
  <h2><%= @news.try :name %></h2>
  <div id="show_product_detail">
    <%= raw @news.try :detail %>
  </div>
  <div id="comments">
    <ul class="comment-list">
      <div class="comments-hd">
        <span class="hd-title">
          Comments count: <span class="highlight"><%= @news.comments.count %></span>
        </span>
      </div>
      <div class="h-dotted-line"></div>
      <%= render partial: "comments/comment", collection: @news.comments %>
    </ul>
  </div>
  <div id="comments_wrapper">
    <%= render :partial => 'comments/form', :locals => {:commentable => @news} %>
  </div>
</div>
