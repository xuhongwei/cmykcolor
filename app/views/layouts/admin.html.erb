<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
  <%= render_page_title_tag %>
  <%= render_page_description_meta_tag %>
  <%= render_page_keywords_meta_tag %>
  <%= render_page_image_link_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta property="og:title"       content="<%= page_title ||  SeoHelper.configuration.site_name %>"/>
  <meta property="og:description" content="<%= page_description || SeoHelper.configuration.default_page_description %>"/>
  <meta property="og:image:url"   content="<%= page_image ||  SeoHelper.configuration.default_page_image %>"/>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <a class="navbar-brand"><%=t :app_name %></a>
      <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav">
          <li class="<%= controller.controller_name.eql?('categories') ? 'active' : '' %>">
            <%= link_to(t(:categories), admin_categories_path) %>
          </li>
          <li class="<%= controller.controller_name.eql?('products') ? 'active' : '' %>">
            <%= link_to(t(:products), admin_products_path) %>
          </li>
          <li class="<%= controller.controller_name.eql?('services') ? 'active' : '' %>">
            <%= link_to(t(:services), admin_services_path) %>
          </li>
          <li class="<%= controller.controller_name.eql?('news') ? 'active' : '' %>">
            <%= link_to(t(:news), admin_news_index_path) %>
          </li>
          <li class="<%= controller.controller_name.eql?('pages') ? 'active' : '' %>">
            <%= link_to(t(:pages), admin_pages_path) %>
          </li>
          <li class="<%= controller.controller_name.eql?('admins') ? 'active' : '' %>">
            <%= link_to(t(:admins), admin_admins_path) %>
          </li>
        </ul>
        <%= render 'admin/common/admin_nav' %>
      </div>
    </div>
  </div>

    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
      </div><!--/row-->

      <footer>
        <p>&copy; <%=t :app_name %> 2015</p>
      </footer>

    </div> <!-- /container -->
</body>
</html>
