<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="devise">
    <div class="container">
      <div class="row">
        <div class="col-md-offset-5 col-md-3">
          <div class="form-login">
            <h4>Welcome back.</h4>
            <%= f.input :email, required: false, autofocus: true, placeholder: "email", input_html: { class: "form-control input-sm chat-input" } %>
            </br>
            <%= f.input :password, required: false, autofocus: true, placeholder: "password", input_html: { class: "form-control input-sm chat-input" } %>
            </br>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <div class="wrapper">
              <span class="group-btn">
                <%= f.button :submit, "Login", class: "btn btn-primary btn-md" %>  
              </span>
            </div>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

