<%- model_class = News -%>
<div class="page-header">
  <h2><%=t :news %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @news.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo) %>:</strong></dt>
  <dd><%= image_tag @news.photo_url, :size => "180x120"  %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @news.weight %></dd>
  <dt><strong><%= model_class.human_attribute_name(:detail) %>:</strong></dt>
  <dd><%= raw @news.detail %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            session[:previous_url] || admin_news_index_path,
            :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_news_path(@news),
              :class => 'btn btn-primary' %>

