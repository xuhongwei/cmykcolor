<%- model_class = Banner -%>
<div class="page-header">
  <h2><%=t :services %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @service.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo) %>:</strong></dt>
  <dd><%= image_tag @service.photo_url, :size => "180x120"  %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @service.weight %></dd>
  <dt><strong><%= model_class.human_attribute_name(:detail) %>:</strong></dt>
  <dd><%= raw @service.detail %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            session[:previous_url] || admin_services_path,
            :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_service_path(@service),
              :class => 'btn btn-primary' %>

