<%= form_for [:admin, @banner], :html => { :class => "form-horizontal" } do |f| %>
  <%= render_error_message @banner %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name,
                     :class => "form-control required" %>
    <%= error_span(@banner[:name]) %>
  </div>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label' %>
    <%= f.text_field :url,
                     :class => "form-control required" %>
    <%= error_span(@banner[:url]) %>
  </div>
  <div class="form-group">
    <%= f.label :weight, :class => 'control-label' %>
    <%= f.text_field :weight, :class => "form-control required" %>
    <%= error_span(@banner[:weight]) %>
  </div>
  <div class="form-group">
    <%= f.label :photo, :class => 'control-label' %>
    <%= image_tag(@banner.photo_url) if @banner.photo? %>
    <%= f.file_field :photo %>
    <%= f.hidden_field :photo_cache %>
  </div>
  <div class="form-group">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                :back, :class => 'btn btn-default' %>
  </div>
<% end %>