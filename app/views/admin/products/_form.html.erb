<%= form_for [:admin, @product], :html => { :class => "form-horizontal" } do |f| %>
  <%= render_error_message @product %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name,
                     :class => "form-control required" %>
    <%= error_span(@product[:name]) %>
  </div>
  <div class="form-group">
    <%= f.label :photo, :class => 'control-label' %>
    <%= image_tag(@product.photo_url) if @product.photo? %>
    <%= f.file_field :photo %>
    <%= f.hidden_field :photo_cache %>
  </div>
  <div class="form-group">
    <%= f.label :brief, :class => 'control-label' %>
    <%= f.text_field :brief,
                     :class => "form-control required" %>
    <%= error_span(@product[:brief]) %>
  </div>
  <div class="form-group">
    <%= f.label :detail, :class => 'control-label' %>
    <%= f.cktext_area :detail %>
    <%= error_span(@product[:detail]) %>
  </div>
  <div class="form-group">
    <%= f.label :category, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :category_id,
        Category.all.collect {|category| [category.name, category.id] },
        { :include_blank => true }, { :class => "form-control" } %>
    </div>
    <%= error_span(@product[:category_id]) %>
  </div>
  <div class="form-group">
    <%= f.label :weight, :class => 'control-label' %>
    <%= f.text_field :weight, :class => "form-control required" %>
    <%= error_span(@product[:weight]) %>
  </div>
  <div class="form-group">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                :back, :class => 'btn btn-default' %>
  </div>
<% end %>