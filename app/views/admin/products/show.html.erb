<%- model_class = Category -%>
<div class="page-header">
  <h2><%=t :categories %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @product.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:brief) %>:</strong></dt>
  <dd><%= @product.brief %></dd>
  <dt><strong><%= model_class.human_attribute_name(:detail) %>:</strong></dt>
  <dd><%= raw @product.detail %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo) %>:</strong></dt>
  <dd><%= image_tag @product.photo_url, :size => "180x120"  %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
  <dd><%= @product.category.try(:name) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @product.weight %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            session[:previous_url] || admin_products_path(@product),
            :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_product_path(@product),
              :class => 'btn btn-primary' %>

