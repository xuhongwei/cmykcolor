<%- model_class = Page -%>
<div class="page-header">
  <h2><%=t :pages %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @page.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:detail) %>:</strong></dt>
  <dd><%= raw @page.detail %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @page.weight %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            session[:previous_url] || admin_pages_path(@page),
            :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_page_path(@page),
              :class => 'btn btn-primary' %>

