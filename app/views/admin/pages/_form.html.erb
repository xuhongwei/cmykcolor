<%= simple_form_for [:admin, @page], :html => { :class => "form-horizontal" } do |f| %>
  <%= render_error_message @page %>
  <div class="form-group">
    <%= f.label :page_type, :class => 'control-label' %>
    <%= f.select :page_type,
                 Page::PAGE_TYPES.map { |value| [ t( "page_types." << value, default: value), value ] },
                 {},{ :class => "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name,
                     :class => "form-control required" %>
    <%= error_span(@page[:name]) %>
  </div>
  <div class="form-group">
    <%= f.label :detail, :class => 'control-label' %>
    <%= f.cktext_area :detail %>
    <%= error_span(@page[:detail]) %>
  </div>
  <div class="form-group">
    <%= f.label :weight, :class => 'control-label' %>
    <%= f.text_field :weight, :class => "form-control required" %>
    <%= error_span(@page[:weight]) %>
  </div>
  <div class="form-group">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                :back, :class => 'btn btn-default' %>
  </div>
<% end %>