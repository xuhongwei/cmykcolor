<%- model_class = Comment -%>
<div class="page-header">
  <h2><%=t :comments %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:commentable_type) %>:</strong></dt>
  <dd><%= @comment.commentable_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:commentable_id) %>:</strong></dt>
  <dd><%= @comment.commentable_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @comment.username %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @comment.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @comment.content %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            session[:previous_url] || admin_comments_path,
            :class => 'btn btn-default' %>
