<%= form_for [:admin, @category], :html => { :class => "form-horizontal" } do |f| %>
  <%= render_error_message @category %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name,
                     :class => "form-control required" %>
    <%= error_span(@category[:name]) %>
  </div>
  <div class="form-group">
    <%= f.label :weight, :class => 'control-label' %>
    <%= f.text_field :weight, :class => "form-control required" %>
    <%= error_span(@category[:weight]) %>
  </div>
  <div class="form-group">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                :back, :class => 'btn btn-default' %>
  </div>
<% end %>